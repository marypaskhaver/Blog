<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% let wasTruncated = false; %>
<% posts.forEach(function(post) {%>
  <h1><%=post.title%></h1>

  <% let truncatedText = post.content; %>

  <% if (post.content.length > 100) { %>
    <% truncatedText = post.content.substring(0, 100) + "..."; %>
    <% wasTruncated = true; %>
  <% } %>

  <p>
    <%=truncatedText%>

    <% if (wasTruncated) { %>
      <a href="posts/<%=post.title%>">Read More</a>
    <% } %>
  </p>

<% }); %>

<%- include("partials/footer"); -%>
